

<h1>Tds</h1>


	<div class="container__item">
    <%= form_with(model: @td, class: "form") do |form| %>
      <%= form.text_field :name, class:"form__field"%>
      <%= form.submit class:"btn btn--primary btn--inside uppercase"%>
		  <%= form.text_field :project_id, type: :hidden %>
    <% end %>
	</div>
 


<div id="tds">
  <% @tds.each do |todo| %>
    <p><%= todo.name %></p>
    <% if todo.name %>
        <%= link_to "Edit", edit_project_td_path(todo.project, todo) %> |
        <%= link_to "Destroy", todo, "data-turbo-method": :delete %>
    <% end %>
  <% end %>
</div>

<%= link_to "Back", project_path(@project) %>

<style>
  :root {
  background: #f5f6fa;
  color: #9c9c9c;
  font: 1rem "PT Sans", sans-serif;
}

html,
body,
.container {
  height: 100%;
}

a {
  color: inherit;
}
